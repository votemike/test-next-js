{
  "name": "test-next-js",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "yarn build-storybook && next build",
    "start": "next start",
    "lint": "eslint --ext js,jsx . --ignore-path ./.gitignore",
    "lint:fix": "eslint --fix --ext js,jsx . --ignore-path ./.gitignore",
    "format": "prettier --check './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "format:fix": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:bundle": "max=70.0 size=`yarn build | grep \"First Load JS\" | grep -Eo '[0-9.]+'`; if (( $(echo \"$size > $max\" |bc -l) )); then echo \"First load shared JS is too big\"; exit 1; fi",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o public/styleguide"
  },
  "dependencies": {
    "next": "10.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "6.3.0-beta.7",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "babel-jest": "^27.0.1",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "style-loader": "^2.0.0"
  }
}
